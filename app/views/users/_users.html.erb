<tr>
    <th scope="row"><%= user.id %></th>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td class="d-flex justify-content-between align-items-evenly">
    <%= link_to 'Show', user_path(user.id), class: 'btn btn-secondary' %>
    <%= link_to 'Edit', edit_user_path(user.id), class: 'btn btn-success' %>
    <%= button_to "Remove", user_path(user.id), method: :delete, class: 'btn btn-danger' %>
    </td>
</tr>
